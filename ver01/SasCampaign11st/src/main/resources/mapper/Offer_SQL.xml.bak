    )
    VALUES (
       TRIM(#{CELLID})
      ,TRIM(#{OFFERID})
      ,TRIM(#{OFFER_TYPE_CD})
      ,TRIM(#{OFFER_SYS_CD})
      ,TRIM(#{DISP_NAME})
      ,TRIM(#{TMPL_CUPN_NO})
      ,TRIM(#{TMPL_CUPN_NO_USE_YN})
      ,0
      ,TRIM(#{CAMPAIGNCODE})
      ,TO_NUMBER(SUBSTR(TRIM(#{CAMPAIGNCODE}),5))
      ,TRIM(#{CREATE_ID})
      ,SYSDATE
    )      
  </update>
  
      
